%---------------------------------------------
%	define mathematical environments
%---------------------------------------------
	\declaretheorem[style=plain]{theorem}
	\declaretheorem[style=plain]{corollary}
	\declaretheorem[style=plain]{lemma}
	\declaretheorem[style=plain]{proposition}

	\declaretheorem[style=definition]{definition}
	\declaretheorem[style=definition]{assumption}
	\declaretheorem[style=definition]{problem}

	\declaretheorem[style=remark,qed=$\lrcorner$]{remark}
	\declaretheorem[style=remark,qed=$\circ$]{example}

%---------------------------------------------
%	set the numbering representation for the new enviroments
%---------------------------------------------
	\renewcommand\thetheorem{\arabic{theorem}}
	\renewcommand\thecorollary{\arabic{theorem}.\arabic{corollary}}
	\renewcommand\thelemma{\arabic{theorem}.\arabic{lemma}}
	\renewcommand\theproposition{\arabic{proposition}}

	\renewcommand\thedefinition{\arabic{definition}}
	\renewcommand\theassumption{\arabic{assumption}}
	\renewcommand\theproblem{\arabic{problem}}

	\renewcommand\theremark{\arabic{remark}}
	\renewcommand\theexample{\arabic{example}}

