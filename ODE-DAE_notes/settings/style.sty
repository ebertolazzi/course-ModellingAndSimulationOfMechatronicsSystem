%---------------------------------------------
%	define mathematical operators
%---------------------------------------------
	\newcommand{\transp}[1]{#1^{\intercal}}
	\newcommand{\transpinv}[1]{#1^{-\intercal}}
	\newcommand{\partialdev}[2]{\dfrac{\partial#1}{\partial#2}}
	\newcommand{\diff}{\mathop{}\!\mathrm{d}}
	\newcommand{\derivative}[2]{\frac{\diff}{\diff#2}{#1}}
	\newcommand{\determinant}[1]{\mathrm{det}\left(#1\right)}
	\newcommand{\diag}[1]{\mathrm{diag}\left(#1\right)}
	\newcommand{\blkdiag}[1]{\mathrm{blkdiag}\left(#1\right)}
	\newcommand{\trace}[1]{\mathrm{trace}~#1}
	\newcommand{\dimens}[1]{\mathrm{dim}\left(#1\right)}
	\newcommand{\norm}[1]{|#1|}
	\newcommand{\sat}[1]{\mathrm{sat}\left(#1\right)}
	\newcommand{\ortcmp}[1]{#1^{\bot}}
	\newcommand{\spanning}[1]{\mathrm{span}\left(#1\right)}
	\newcommand{\kernel}[1]{\mathrm{ker}~#1}
	\newcommand{\im}[1]{\mathrm{im}~#1}
	\newcommand{\dz}[1]{\mathrm{dz}\left(#1\right)}
	\newcommand{\rank}[1]{\mathrm{rank}~#1}
	\newcommand{\nulla}[1]{\mathrm{nul}~#1}
	\newcommand{\spec}[1]{\lambda\left(#1\right)}
	\newcommand{\He}[1]{\mathrm{He}\left(#1\right)}
	\newcommand{\kron}{\mathrm{\otimes}}
	\newcommand{\col}[1]{\mathrm{col}\left(#1\right)}
	\newcommand{\argmin}[1]{\mathrm{arg\,min}~#1}
